{
  "name": "cpp-def-paster",
  "displayName": "C++ Definition Paster",
  "description": "Quickly copy your C++ declarations and have their definitions ready to paste!",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "img/thumbnail.png",
  "galleryBanner": {
    "color": "#444444",
    "theme": "dark"
  },
  "publisher": "binary-song",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cpp-def-paster.copyDefinition",
        "title": "Copy Definition"
      },
      {
        "command": "cpp-def-paster.magicCopy",
        "title": "Magic Copy: Select from Left to Right for Normal Copying; Select from Right to Left for Definition Copying.",
        "shortTitle": "Magic Copy"
      }
    ],
    "keybindings": [
      {
        "command": "cpp-def-paster.copyDefinition",
        "key": "ctrl+alt+c",
        "when": "editorTextFocus && (editorLangId == cpp || editorLangId == c)"
      },
      {
        "command": "cpp-def-paster.magicCopy",
        "key": "ctrl+c",
        "when": "editorTextFocus && (editorLangId == cpp || editorLangId == c) && config.magicCopyEnabled"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "magicCopyEnabled": {
          "type": "boolean",
          "default": false,
          "title": "Magic Copy",
          "description": "Enable or disable the Magic Copy feature. When enabled, select from left to right for normal copying; select from right to left for definition copying."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Binary-Song/cpp-def-paster.git"
  }
}